<!DOCTYPE html>
<html lang="<%= lang %>">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title><%=t.Home%></title>
        <link rel="stylesheet" href="css/Home.css">
        <script src='scripts/Home.js' defer></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />
    </head>

    <body>
        <div class="top-header" id="th">
            <div class="top-header-left"></div>
            <div class="top-header-right" id="nav">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <p onclick="smoothScroll(information)"><%=t.ABOUT %></p>
                <p onclick="smoothScroll(sweets)"><%=t.SWEETS %></p>
                <p onclick="smoothScroll(coffee)"><%=t.COFFEE %></p>
                <p onclick="smoothScroll(map)"><%=t.MAP %></p>
                <div class="flags">
                    <p onclick="window.location='?clang=de'"><img src="img/de.png" width="30" alt="deutsch"/></p>
                    <p onclick="window.location='?clang=se'"><img src="img/se.png" width="30" alt="svenska"></p>
                    <p onclick="window.location='?clang=en'"><img src="img/en.png" width="30" alt="english"></p>
                </div>
            </div>
            <span style="font-size:30px;cursor:pointer" onclick="openNav()" id="open">&#9776;</span>
        </div>
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-1E7C0D6B5Y"></script>
        <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js" data-cfasync="false"></script>
        <script>
          var cc = window.cookieconsent.initialise({
              "palette": {
                  "popup": {
                      "background": "#000"
                  },
                  "button": {
                      "background": "#f1d600"
                  }
              },
              "type": "opt-out",
              "onStatusChange": (status, chosenBefore) => {
                  if ( status != 'accept' ) { return; }
                  window.dataLayer = window.dataLayer || [];
                  function gtag(){dataLayer.push(arguments);}
                  gtag('js', new Date());
                  gtag('config', 'G-1E7C0D6B5Y');
              }
          });
        </script>
    <div class="TheMVContainer">
        <img src="img/TheMultiVerse-black-resized.jpg" alt="TheMV" id="TheMV">
    </div>

    <div class="information" id="information">
        <div class="pagefont flowdown">
          <div class="padded"><h1><%=t.ABOUT%></h1></div>
            <div class="flowleft">
              <div class="sixty padded"><h2><%=t.WELCOME%></h2><p><%- include("about-" + lang + ".ejs") %></div>
              <div class="padded">
                <%=t.OPENING_TIMES%>
                <br>
                <%=t.Monday%> – <%=t.Friday%> <%=t.from%> 12 <%=t.to%> 19 <%=t.oclock%>
                <br>
                <%=t.Saturday%> <%=t.from%> 13 <%=t.to%> 18 <%=t.oclock%>
                <br>
                The Multiverse
                <br>
                Ebertystr. 24
                <br>
                10249 Berlin</p>
          </div>
          </div>
        </div>
    </div>

    <div id="sweets" class="pagefont flowdown">
      <div class="padded"><h1><%= t.SWEETS %></h1></div>
      <div id="container" class="flowleft">
        <div id="left" class="padded">
          <%- include('sweets-' + lang + '.ejs') %>
        </div><div id="right">
          <img src="img/sweets.jpeg" width="600" alt="Sweets">
        </div>
      </div>
    </div>

    <div id="coffee" class="pagefont flowdown fullwidth padded">
      <h1><%= t.COFFEE %></h1>
      <div class="flowleft fullwidth">
        <div class="forty padded slideshow-container">

          <!-- Full-width images with number and caption text -->
          <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <img src="img/coffee.jpeg" style="width:100%">
            <div class="text">Cappuccino</div>
          </div>

          <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <img src="img/coffeemaschine.jpeg" style="width:100%">
            <div class="text">Our coffee machine</div>
          </div>


          <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img src="img/coffee-sign.jpeg" style="width:100%">
            <div class="text">Prices</div>
          </div>



          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <div class="fifty padded">
          <%- include('coffee-' + lang) %>
        </div>
      </div>
    </div>

    <div class="flowdown pagefont padded" id="map">
          <h1><%=t.find_us%></h1>
          <div class="mapouter">
            <div class="gmap_canvas">
              <iframe height="546" id="gmap_canvas" src="https://maps.google.com/maps?q=The%20Multiverse,%20Ebertystra%C3%9Fe%2024,%20Berlin&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
              <br>
              <style>.mapouter{position:relative;text-align:left;height:546px;}</style><a href="https://www.embedgooglemap.net">embed google maps in gmail</a><style>.gmap_canvas {overflow:hidden;background:none!important;height:546px;}</style>
            </div>
          </div>
        </div>

    <div class="pagefont">
        <p>© 2021 by The Multiverse <a href="/pages/impressum.html">impressum</a></p>
    </div>


    </body>
</html>
